################################################################################

### --- VARIABLES DE TECLAS (Para fácil mantenimiento) ---
$mainMod = SUPER
$appMod = SUPER SHIFT
$webMod = SUPER SHIFT ALT

### --- APLICACIONES NATIVAS ---
# Usamos 'uwsm-app --' de forma consistente para gestión de recursos
bindd = $mainMod, RETURN, Terminal, exec, uwsm-app -- xdg-terminal-exec --dir="$(omarchy-cmd-terminal-cwd)"
bindd = $appMod,  F, File manager, exec, uwsm-app -- nautilus --new-window
bindd = $appMod,  B, Browser,      exec, omarchy-launch-browser
bindd = $webMod,  B, Browser (Pr), exec, omarchy-launch-browser --private
bindd = $appMod,  M, Music,        exec, omarchy-launch-or-focus spotify
bindd = $appMod,  N, Editor,       exec, omarchy-launch-editor
bindd = $appMod,  D, Docker,       exec, omarchy-launch-tui lazydocker
bindd = $appMod,  W, Typora,       exec, uwsm-app -- typora --enable-wayland-ime
bindd = $appMod,  SLASH, Pass,     exec, uwsm-app -- 1password

# Apps con flags específicas o Launch-or-Focus
bindd = $appMod, G, Signal,   exec, omarchy-launch-or-focus ^signal$ "uwsm-app -- signal-desktop"
bindd = $appMod, O, Obsidian, exec, omarchy-launch-or-focus ^obsidian$ "uwsm-app -- obsidian --disable-gpu --enable-wayland-ime"

### --- WEB APPS ---
# Agrupadas para distinguir navegación de herramientas web
bindd = $appMod, A, ChatGPT,  exec, omarchy-launch-webapp "https://chatgpt.com"
bindd = $webMod, A, Grok,     exec, omarchy-launch-webapp "https://grok.com"
bindd = $appMod, C, Calendar, exec, omarchy-launch-webapp "https://app.hey.com/calendar/weeks/"
bindd = $appMod, E, Email,    exec, omarchy-launch-webapp "https://app.hey.com"
bindd = $appMod, Y, YouTube,  exec, omarchy-launch-webapp "https://youtube.com/"
bindd = $appMod, X, X,        exec, omarchy-launch-webapp "https://x.com/"
bindd = $webMod, X, X Post,   exec, omarchy-launch-webapp "https://x.com/compose/post"

# Web Apps con Focus (WhatsApp, Messages, Photos)
bindd = $webMod,      G, WhatsApp, exec, omarchy-launch-or-focus-webapp WhatsApp "https://web.whatsapp.com/"
bindd = $appMod CTRL, G, Google M, exec, omarchy-launch-or-focus-webapp "Google Messages" "https://messages.google.com/web/conversations"
bindd = $appMod,      P, Photos,   exec, omarchy-launch-or-focus-webapp "Google Photos" "https://photos.google.com/"

### --- SPECIAL WORKSPACE (SCRATCHPAD) ---
# Limpiamos binds conflictivos y asignamos de forma atómica
unbind = $mainMod, S
unbind = $mainMod ALT, S
unbind = $mainMod, A
bind = $mainMod, S, movetoworkspacesilent, special
bind = $mainMod, A, togglespecialworkspace, special

### --- NUMPAD NAVIGATION ---
# Nota: He mantenido los códigos de tecla (code:xx) pero los he organizado 
# visualmente para que la relación tecla-acción sea obvia.

# Workspace: Switch | Move (Shift) | Silent (Shift+Alt)
$w1 = code:87
$w2 = code:88
$w3 = code:89
$w4 = code:83
$w5 = code:84
$w6 = code:85
$w7 = code:79
$w8 = code:80
$w9 = code:81
$w10 = code:90

# [Switch to Workspace]
bind = $mainMod, $w1, workspace, 1
bind = $mainMod, $w2, workspace, 2
bind = $mainMod, $w3, workspace, 3
bind = $mainMod, $w4, workspace, 4
bind = $mainMod, $w5, workspace, 5
bind = $mainMod, $w6, workspace, 6
bind = $mainMod, $w7, workspace, 7
bind = $mainMod, $w8, workspace, 8
bind = $mainMod, $w9, workspace, 9
bind = $mainMod, $w10, workspace, 10

# [Move to Workspace]
bind = $appMod, $w1, movetoworkspace, 1
bind = $appMod, $w2, movetoworkspace, 2
bind = $appMod, $w3, movetoworkspace, 3
bind = $appMod, $w4, movetoworkspace, 4
bind = $appMod, $w5, movetoworkspace, 5
bind = $appMod, $w6, movetoworkspace, 6
bind = $appMod, $w7, movetoworkspace, 7
bind = $appMod, $w8, movetoworkspace, 8
bind = $appMod, $w9, movetoworkspace, 9
bind = $appMod, $w10, movetoworkspace, 10

# [Move Silently]
bind = $webMod, $w1, movetoworkspacesilent, 1
bind = $webMod, $w2, movetoworkspacesilent, 2
bind = $webMod, $w3, movetoworkspacesilent, 3
bind = $webMod, $w4, movetoworkspacesilent, 4
bind = $webMod, $w5, movetoworkspacesilent, 5

# [Group Management] - Usando ALT para coherencia
bind = $mainMod ALT, $w1, changegroupactive, 1
bind = $mainMod ALT, $w2, changegroupactive, 2
bind = $mainMod ALT, $w3, changegroupactive, 3
bind = $mainMod ALT, $w4, changegroupactive, 4
bind = $mainMod ALT, $w5, changegroupactive, 5
